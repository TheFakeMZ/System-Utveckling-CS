@using MVCApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Welcome to Simhopp Europe";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<script src="~/Scripts/jquery-3.6.0.min.js"></script>

<section class="w3l-hotair-form">
    <h1>@ViewBag.Title</h1>
    <div class="container">

        <!-- /form -->
        <div class="workinghny-form-grid">
            <div class="main-hotair">
                <div class="content-wthree">
                    <h2>Sign In</h2>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        <div class="form-group">
                            <h4>
                                <span class="col-md-offset-0 col-md-1 glyphicon glyphicon glyphicon-envelope text-info" title="Enter your Email Address"></span>
                                @Html.LabelFor(m => m.Email, new { @class = "email" })
                            </h4>
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "email", placeholder = "Email Address", type = "email", required = ""})
                                <br />
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <h4>
                                <span class="col-md-offset-0 col-md-1 glyphicon glyphicon-lock text-info" title="Enter your Password"></span>
                                @Html.LabelFor(m => m.Password, new { @class = "email" })
                            </h4>
                            <div class="col-md-12">

                                @Html.PasswordFor(m => m.Password, new { @class = "password", placeholder = "Password", type = "password", required = ""})
                                <span class="glyphicon glyphicon-eye-open text-default" title="Click to Display and Hover again to Hide your Password"></span>
                                <br />
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <br /> <br />
                        <div class="form-group">
                            <div class="col-md-offset-0 col-md-12">
                                <button class="btn" type="submit">Log in</button>
                                @if (User.IsInRole("Admin"))
                                {
                                    <p class="account">Don't have an account? <a href="Register">@Html.ActionLink("Register", "Register")</a></p>
                                }
                                </div>
                        </div>
                    }
                </div>
                <div class="w3l_form align-self">
                    <div class="left_grid_info">
                        <img src="/images/1.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function (){
        $(".glyphicon").mouseup(function (){
            $("#Password").attr("type", "text")
        });
        $(".glyphicon").mouseenter(function () {
            $("#Password").attr("type", "password")
        });
    }); 
</script>

