@model MVCApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Welcome to Simhopp Europe";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<section class="w3l-hotair-form">
    <h1>@ViewBag.Title</h1>
    <div class="container">

        <!-- /form -->
        <div class="workinghny-form-grid">
            <div class="main-hotair">
                <div class="content-wthree">
                    <h2>Register</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />

                        <div class="form-group">
                            <h4><span class="col-md-offset-0 col-md-6 glyphicon glyphicon-user text-info" title="Enter a Email Address"></span></h4>
                            <br />
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "email", placeholder = "Email Address", type = "email", required = "" })
                                <br />
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h4><span class="col-md-offset-0 col-md-6 glyphicon glyphicon-lock text-info" title="Enter a Password"></span></h4>
                            <br />
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "password", placeholder = "Password", type = "password", required = "" })
                                <br />
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h4><span class="col-md-offset-0 col-md-6 glyphicon glyphicon-lock text-info" title="Repeat the Password"></span></h4>
                            <br />
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "password", placeholder = "Confirm Password", type = "password", required = "" })
                                <br />
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <br /> <br />
                        <div class="form-group">
                            <div class="col-md-offset-0 col-md-12">
                                <button class="btn" type="submit">Register</button>
                                <p class="account">Already a member? <a href="Register">@Html.ActionLink("Login", "Login")</a></p>
                            </div>
                        </div>
                    }
                </div>
                <div class="w3l_form align-self">
                    <div class="left_grid_info">
                        <img src="/images/1.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

