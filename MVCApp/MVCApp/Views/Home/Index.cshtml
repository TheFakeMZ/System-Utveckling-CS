@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<br />
<div style="text-align:center">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Simhopp EU</h1>
            <br />
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h2>Competitions</h2>
            <p>
                View the current competitions, as well as where and where they will take place!
            </p>
            <br />
            <br />
            <p><a class="btn-lg btn-info" @Html.ActionLink("View the Competitions", "Index", "Competitions")</a></p>
        </div>

        <div class="col-md-4">
            <h2>Dives</h2>
            <p>Check out what dive your favorite diver strives to do. If you are a coach/diver then register a dive wish to  performe.</p>
            <br />
            <p><a class="btn-lg btn-info" @Html.ActionLink("View the Dives", "Index", "Dives") </a></p>
        </div>

        <div class="col-md-4">
            <h2>Contact</h2>
            <br />
            <p>Please contact us if you have any questions, whether personal or business-related.</p>
            <br />
            <p><a class="btn-lg btn-info" @Html.ActionLink("Contact Simhopp EU", "Contact", "Home")</a></p>
        </div>
    </div>
