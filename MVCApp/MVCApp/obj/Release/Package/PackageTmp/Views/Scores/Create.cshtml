                @Html.EditorFor(model => model.Dive, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                @Html.ValidationMessageFor(model => model.Dive, "", new { @class = "text-danger" })
                <label>Your dive id:</label>  @ViewBag.diveID

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Score1, htmlAttributes: new { @class = "control-label col-md-2" })
