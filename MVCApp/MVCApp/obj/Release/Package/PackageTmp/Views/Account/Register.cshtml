@model MVCApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Welcome to Simhopp Europe";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@if (User.IsInRole("Admin"))
{
    <section class="w3l-hotair-form">
        <h1>@ViewBag.Title</h1>
        <div class="container">

            <!-- /form -->
            <div class="workinghny-form-grid">
                <div class="main-hotair">
                    <div class="content-wthree">
                        <h2>Register</h2>
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <hr />

                            <div class="form-group">
                                <h4>
                                    <span class="col-md-offset-0 col-md-1 glyphicon glyphicon-envelope text-info" title="Enter a Email Address"></span>
                                    @Html.LabelFor(m => m.Email, new { @class = "email" })
                                </h4>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "email", placeholder = "Email Address", type = "email", required = "" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <h4>
                                    <span class="col-md-offset-0 col-md-1 glyphicon glyphicon-user text-info" title="Enter a First Name"></span>
                                    @Html.LabelFor(m => m.FirstName, new { @class = "text" })
                                </h4>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "text", placeholder = "Forename", type = "text", required = "" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <h4>
                                    <span class="col-md-offset-0 col-md-1 glyphicon glyphicon-user text-info" title="Enter a Last Name"></span>
                                    @Html.LabelFor(m => m.LastName, new { @class = "text" })
                                </h4>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "text", placeholder = "Surname", type = "text", required = "" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <h4>
                                    <span class="col-md-offset-0 col-md-1 glyphicon glyphicon-heart text-info" title="Enter a Gender"></span>
                                    @Html.LabelFor(m => m.Gender, new { @class = "text" })
                                </h4>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Gender, new { @class = "text", placeholder = "Gender", type = "text", required = "" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <h4>
                                    <span class="col-md-offset-0 col-md-1 glyphicon glyphicon-calendar text-info" title="Enter an Age"></span>
                                    @Html.LabelFor(m => m.Age, new { @class = "number" })
                                </h4>
                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.Age, new { @class = "number", placeholder = "Age", type = "number", required = "" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <h4>
                                    <span class="col-md-offset-0 col-md-1 glyphicon glyphicon-lock text-info" title="Enter a Password"></span>
                                    @Html.LabelFor(m => m.Password, new { @class = "password" })
                                </h4>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "password", placeholder = "Password", type = "password", required = "" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <h4>
                                    <span class="col-md-offset-0 col-md-1 glyphicon glyphicon-lock text-info" title="Repeat the Password"></span>
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "password" })
                                </h4>
                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "password", placeholder = "Confirm Password", type = "password", required = "" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <br /> <br />
                            <div class="form-group">
                                <div class="col-md-offset-0 col-md-12">
                                    <button class="btn" type="submit">Register</button>
                                    <p class="account">Already a member? <a href="Register">@Html.ActionLink("Login", "Login")</a></p>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="w3l_form align-self">
                        <div class="left_grid_info">
                            <img src="/images/1.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
